/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* sortList(ListNode* head) {
        if (head == nullptr) { 
            return head;
        }
    
        ListNode* temp = head;
        temp = temp->next;
        head->next = nullptr;
        while (temp != nullptr) {
            if (temp->val < head->val) {
                ListNode* curr = temp;
                temp = temp->next;
                curr->next = head;
                head = curr;
            } else {
                ListNode* curr = head;
                while (curr->next != nullptr && curr->next->val < temp->val) {
                    curr = curr->next;
                }
                ListNode* temp2 = temp->next;
                temp->next = curr->next;
                curr->next = temp;
                temp = temp2;
            }
        }
        return head;
    }
};
